@using Custom_Remote_Validations.Models
@{
    ViewBag.Title = "ItemReviewDisplay";
    ItemModel items = Session["Item"] as ItemModel;
    List<ReviewerModel> reviews = Session["Reviews"] as List<ReviewerModel>;
}

<h2>Item Details</h2>
<div style="background-color:burlywood;padding:5px;">
    @if(items !=null)
            {
                <h1 style="color:green">@items.Name</h1>
                <b>Category :</b> @items.Category<br/>
                <b>Price :</b> @items.Price
    }
    else
            {
                <h3 style="color:red;">Sorry Could not find the Item</h3>
            }
</div>
<hr/>
<h2>Loading the Reviews</h2>
@if(reviews !=null)
{
    foreach(var review in reviews)
                {
                    <h4><b>@review.CommentsTitle</b></h4>
                    <b>@review.ReviewerName</b><br/>
                    <b>Date :</b> @review.ReviewDate <span>|</span>
                    <b>Star Rating :</b>@review.StarRating<span>/5</span>
                    <br/>
                    <i>@review.Comments</i>
                    <hr/>
    }
}
else
            {
                <h3 style="color:red;">No Reviews Found</h3>
            }


